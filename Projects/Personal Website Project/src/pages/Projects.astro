---
import Layout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';

const projects = [
  {
    title: "3D Printer Automation Project",
    content: "Built an automated system using PLCs, solenoids, and robotic arms for additive manufacturing workflows."
  },
  {
    title: "8-Bit Computer Design",
    content: "Designed modular 8-bit architecture using breadboard and custom PCBs. Delivered technical presentations and manufacturing docs."
  }
];
---

<Layout>
  <section id="projects" class="py-12 bg-white">
    <div class="container mx-auto text-center">
      <h2 class="text-2xl font-bold mb-4">Projects</h2>
      <Card title="3D Printer Automation Project" content="Built and programmed an automated 3D printer system with PLCs and robotic arms." />
      <Card title="8-Bit Computer Design" content="Designed modular 8-bit computer using breadboard and custom PCBs." />
      <div class="mt-6">
        <Button text="View Project Archive" href="/projects" />
      </div>
    </div>
  </section>
</Layout>
