---
const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Projects', href: '/projects' },
  { name: 'Contact', href: '/contact' },
];
---

<nav class="nav-wrapper">
  <ul class="nav">
    {navLinks.map((link) => (
      <li><a href={link.href}>{link.name}</a></li>
    ))}
  </ul>
</nav>

<style>
  .nav-wrapper {
    background-color: transparent;
    padding-top: 1rem;
    padding-bottom: 1rem;
  }
  .nav {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  a {
    text-decoration: none;
    color: inherit;
    font-weight: 500;
    transition: color 0.2s ease;
  }
  a:hover {
    color: var(--color-indigo-600, #6366f1);
  }
</style>
