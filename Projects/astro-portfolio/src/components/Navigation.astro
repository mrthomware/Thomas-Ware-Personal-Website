---
const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Resume', href: '/resume' },
  { name: 'Projects', href: '/projects' },
  { name: 'Contact', href: '/contact' },
];
---

<nav>
  <ul class="nav">
    {navLinks.map((link) => (
      <li><a href={link.href}>{link.name}</a></li>
    ))}
  </ul>
</nav>

<style>
  .nav {
    display: flex;
    gap: 1rem;
    list-style: none;
    padding: 1rem;
  }
  a {
    text-decoration: none;
    color: inherit;
  }
</style>
