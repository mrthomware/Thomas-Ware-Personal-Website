---
export interface EducationItem {
  institution: string;
  program: string;
  duration: string;
  termDetails?: { term: string; courses: string[] }[];
  highlights?: string[];
}

export interface Props {
  education: EducationItem[];
}

const { education } = Astro.props;
---

<section class="max-w-4xl mx-auto py-16 px-4">
  <h1 class="text-4xl font-bold text-center mb-8">Education & Certifications</h1>
  <ul class="space-y-10">
    {education.map((item) => (
      <li class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow">
        <h2 class="text-2xl font-semibold">{item.institution}</h2>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2 italic">
          {item.program} â€” {item.duration}
        </p>

        {item.termDetails && (
          <div class="space-y-4">
            {item.termDetails.map(term => (
              <div>
                <h3 class="font-semibold mt-4">{term.term}</h3>
                <ul class="list-disc list-inside text-gray-700 dark:text-gray-300">
                  {term.courses.map(course => <li>{course}</li>)}
                </ul>
              </div>
            ))}
          </div>
        )}

        {item.highlights && (
          <ul class="list-disc list-inside text-gray-700 dark:text-gray-300 mt-4">
            {item.highlights.map((point) => (
              <li>{point}</li>
            ))}
          </ul>
        )}
      </li>
    ))}
  </ul>
</section>
