---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Projects | Thomas Ware">
  <section class="max-w-5xl mx-auto px-4 py-16">
    <h1 class="text-3xl font-bold mb-10 text-center">Featured Projects</h1>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <Card
        title="3D Printer Automation Project"
        description="Built an automated system using PLCs, solenoids, and robotic arms for additive manufacturing workflows."
        link="/projects/3D Printer Automation Project"
        image="/images/3d-printer-placeholder.png"
      />
      <Card
        title="8-Bit Computer Design"
        description="Designed modular 8-bit architecture using breadboard and custom PCBs. Delivered technical presentations and manufacturing docs."
        link="/projects/8-Bit Computer Design"
        image="/images/8bit-computer-placeholder.png"
      />
      <Card
        title="Servo-Controlled Puppet"
        description="A fully-articulated puppet using servo motors and custom control boards. Designed for performance and remote control."
        link="/projects/servo-puppet"
        image="/images/servo-puppet-placeholder.png"
      />
    </div>
  </section>
</Layout>
